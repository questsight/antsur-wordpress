.page-bay__img
  width 200px
  height 200px
  border 1px solid themeColor
  margin-right 50px
  margin-bottom 50px
  position relative
  float left
  display none
  @media only screen and (min-width: xs)
    display block
  img
    max-height 100%
    max-width 100%
    width auto
    height auto
    position absolute
    transform: translate(-50%,-50%);
    top: 50%;
    left: 50%;