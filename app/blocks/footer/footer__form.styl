.footer__form
  position absolute
  transform translate(-50%,-50%)
  top 50%
  left 50%
  input
  textarea
    width 300px
    margin 10px 0
  button
    margin-left 100px
    background lightColor
    color darkThemeColor
    transition-duration 0.35s
    font-family titleBoldFont
    &:hover
      background addColor
      color themeColor