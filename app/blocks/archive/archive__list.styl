.archive__list
  list-style-type none
  margin 0
  padding 0
  display inline-block
  @media only screen and (min-width: sm)
    display flex
    justify-content space-between
  & > li
    position relative
    text-align center
    background addColor
    display inline-block
    margin 5px
    &:hover ul
      display block
    & > a
      color themeColor
      display inline-block
      font-size sSize
      padding 5px
      @media only screen and (min-width: navigationBreakPoint)
        padding 10px 25px
      transition-duration 0.35s
      text-decoration underline
      &:hover
        color themeColor