.single__review-title
  font-family titleBoldFont
  border 1px solid socialColor
  padding 15px
  margin 30px 0
  max-width 320px
  cursor pointer
  text-decoration underline
  color themeColor
  &:focus
    text-decoration none
  &:hover
    text-decoration none
  &:active
    color darkThemeColor
    text-decoration underline
  @media only screen and (min-width: xs)
    max-width 400px
    padding 15px 60px