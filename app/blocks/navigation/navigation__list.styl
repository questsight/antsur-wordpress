.navigation__list
  list-style-type none
  margin 0
  padding 0 15px
  text-align center
  font-family addFont
  @media only screen and (min-width: navigationBreakPoint)
    display flex
    justify-content space-around
  & > li
    margin 0 0 30px
    position relative
    text-align center
    cursor pointer
    &:last-child
      margin 0
    @media only screen and (min-width: navigationBreakPoint)
      display inline-block
      margin 0 12px
      padding 0
      &:hover ul
        display block
    & > a
      color addColor
      display inline-block
      font-size xsSize
      padding 10px 0
      text-transform uppercase
      transition-duration 0.35s
      &:hover
        color themeColor
    & > ul
      background themeColor
      margin 0 0 0 -15px
      padding 0
      overflow hidden
      min-width calc(100% + 30px)
      z-index 10
      color lightColor
      font-size sSize
      display none
      padding 9px 9px 12px
      @media only screen and (min-width: navigationBreakPoint)
        position absolute
      & > li
        display block
        background themeColor
        vertical-align top
        position relative
        & > a
          color addColor
          display block
          font-size xsSize
          padding 5px 15px
          text-align left
          text-transform uppercase
          transition-duration 0.35s
          &:hover
            color lightColor
            font-family titleBoldFont